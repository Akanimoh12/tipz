# Somnia Network Configuration
VITE_SOMNIA_TESTNET_RPC_URL=https://somnia-testnet-rpc.example.com
VITE_SOMNIA_MAINNET_RPC_URL=https://somnia-mainnet-rpc.example.com
VITE_SOMNIA_TESTNET_CHAIN_ID=31337
VITE_SOMNIA_MAINNET_CHAIN_ID=1
VITE_SOMNIA_TESTNET_EXPLORER_URL=https://testnet-explorer.somnia.network
VITE_SOMNIA_MAINNET_EXPLORER_URL=https://explorer.somnia.network

# Network Selection (testnet or mainnet)
VITE_DEFAULT_NETWORK=testnet

# WalletConnect Project ID (required for RainbowKit)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Somnia Data Streams Configuration
# Enable/disable real-time data streaming (true/false)
VITE_ENABLE_STREAMS=true
# Polling interval for stream updates in milliseconds (default: 1000)
VITE_STREAMS_POLL_INTERVAL=1000
# Enable/disable automatic event publishing from contracts (true/false)
VITE_ENABLE_EVENT_PUBLISHING=true

# Pinata IPFS
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_API_SECRET=your_pinata_api_secret
VITE_PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# X (Twitter) API OAuth 2.0
# Get your Client ID from: https://developer.twitter.com/en/portal/dashboard
# See X_API_SETUP.md for detailed setup instructions
VITE_X_API_CLIENT_ID=your_x_api_client_id
# Note: Client Secret is NOT needed - we use PKCE (Proof Key for Code Exchange)

# Contract Addresses
VITE_TIPZ_PROFILE_ADDRESS=
VITE_TIPZ_CORE_ADDRESS=
VITE_TIPZ_REWARDS_ADDRESS=

# Application URL (must match X OAuth redirect URI exactly)
# Development: http://localhost:5173
# Production: https://your-domain.com
VITE_APP_URL=http://localhost:5173

# Sentry Error Tracking (Production only)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Plausible Analytics
VITE_PLAUSIBLE_DOMAIN=tipz.app
